{
	"meta": {
		"id": "hello_extension",
		"name": "Hello World Extension",
		"version": "1.0.0",
		"author": "Spotlight Team",
		"description": "A complete example demonstrating nested commands with parameters"
	},
	"commands": [
		{
			"keyword": "-hello",
			"name": "Hello Commands",
			"description": "Example nested commands with parameters",
			"icon": "Chat",
			"commands": [
				{
					"keyword": "-world",
					"name": "Say Hello World",
					"description": "Prints Hello World to console",
					"action_id": "hello.world",
					"icon": "World"
				},
				{
					"keyword": "-greet",
					"name": "Greet Someone",
					"description": "Greet a person by name",
					"icon": "Person",
					"commands": [
						{
							"keyword": "-simple",
							"name": "Simple Greeting",
							"description": "Say hello to someone",
							"action_id": "hello.greet.simple",
							"icon": "Chat",
							"args_def": [
								{ "name": "Name", "type": "string", "hint": "Enter a name" }
							]
						},
						{
							"keyword": "-formal",
							"name": "Formal Greeting",
							"description": "Formally greet someone with title",
							"action_id": "hello.greet.formal",
							"icon": "Rename",
							"args_def": [
								{ "name": "Title", "type": "string", "hint": "Mr/Ms/Dr" },
								{ "name": "Name", "type": "string", "hint": "Last name" }
							]
						},
						{
							"keyword": "-count",
							"name": "Greet Multiple Times",
							"description": "Repeat greeting N times",
							"action_id": "hello.greet.count",
							"icon": "Loop",
							"args_def": [
								{ "name": "Name", "type": "string" },
								{ "name": "Count", "type": "int", "hint": "How many times?" }
							]
						}
					]
				},
				{
					"keyword": "-calc",
					"name": "Quick Calculate",
					"description": "Basic math operations",
					"icon": "Add",
					"commands": [
						{
							"keyword": "-add",
							"name": "Add Numbers",
							"description": "Add two numbers together",
							"action_id": "hello.calc.add",
							"icon": "Add",
							"args_def": [
								{ "name": "A", "type": "float" },
								{ "name": "B", "type": "float" }
							]
						},
						{
							"keyword": "-multiply",
							"name": "Multiply Numbers",
							"description": "Multiply two numbers",
							"action_id": "hello.calc.multiply",
							"icon": "Cross",
							"args_def": [
								{ "name": "A", "type": "float" },
								{ "name": "B", "type": "float" }
							]
						}
					]
				},
				{
					"keyword": "-time",
					"name": "Show Current Time",
					"description": "Display current date and time",
					"action_id": "hello.time",
					"icon": "Time"
				}
			]
		}
	],
	"actions": {
		"hello.world": {
			"script": "res://toolkit_extensions/hello_actions.gd",
			"method": "hello_world"
		},
		"hello.greet.simple": {
			"script": "res://toolkit_extensions/hello_actions.gd",
			"method": "greet_simple"
		},
		"hello.greet.formal": {
			"script": "res://toolkit_extensions/hello_actions.gd",
			"method": "greet_formal"
		},
		"hello.greet.count": {
			"script": "res://toolkit_extensions/hello_actions.gd",
			"method": "greet_count"
		},
		"hello.calc.add": {
			"script": "res://toolkit_extensions/hello_actions.gd",
			"method": "calc_add"
		},
		"hello.calc.multiply": {
			"script": "res://toolkit_extensions/hello_actions.gd",
			"method": "calc_multiply"
		},
		"hello.time": {
			"script": "res://toolkit_extensions/hello_actions.gd",
			"method": "show_time"
		}
	}
}
